<div class="container">
<div class="row">
    <div class="col-md-12 min-vh-60 d-flex flex-column justify-content-center">
        <div class="row">
            <div class="col-lg-6 col-md-8 mx-auto">
                <!-- form card  -->
                <div class="card rounded shadow shadow-sm">
                    <div class="card-header">
                        <h3 class="mb-0">CITIES</h3>
                    </div>
                    <div class="card-body">
                    <%= form_for [:admin, @city] do |f| %>
                       <%= render(partial: "error_refer/error", locals: { target: @city }) %>

                        <div class = "form-group">
                          <%= f.label :name, "name "%>
                          <%= f.text_field :name, placeholder: "Enter city name", class: "form-control" %>
                        </div>       
                        <div class = "form-group">
                          <%= f.submit "Submit", class: "btn btn-primary" %>
                        </div>
                    <% end %>
                    </div>
                    <!--/card-block-->
                </div>
                <!-- /form card login -->
            </div>
        </div>
        <!--/row-->
    </div>
    <!--/col-->
</div>
<!--/row-->
</div>
<!--/container-->