<div class="container">
  <div class="row">
    <div class="col-md-12 min-vh-60 d-flex flex-column justify-content-center">
      <div class="row">
        <div class="col-lg-12">
          <!-- form card  -->
          <div class="card rounded shadow shadow-sm">
            <div class="card-header">
              <h3 class="mb-0">Hotel</h3>
            </div>
            <div class="card-body">
              <%= form_for [:admin, @hotel] do |f| %>
              <%= render(partial: "error_refer/error", locals: { target: @hotel }) %>

              <div class = "form-group">
                <%= f.label :name, "Name of Hotel "%>
                <%= f.text_field :name, placeholder: "Enter your name", class: "form-control", step: 0.1, min: 0, required: true %>
              </div>

              <div class ="form-group">
                <%= f.label :city, "Select City"%>
                <%= f.select :city_id, @cities.map { |type| [type.name.titleize, type.id] },{ include_hidden: false }, class: 'form-control', required: true %>
              </div>

              <div class ="form-group">
                <%= f.label :address, "Address of Hotel"%>
                <%= f.text_field :address, placeholder: "address", class: "form-control", step: 0.1, min: 0, required: true %>
              </div>

              <div class = "form-group">
                <%= f.label :single_bedroom_price, "Single bedroom price:"%>
                <%= f.number_field :single_bedroom_price, placeholder: "Enter price per room", class: "form-control", step: 0.1, min: 0.0 %>
              </div>

              <div class = "form-group">
                <%= f.label :double_bedroom_price, "Double bedroom price:"%>
                <%= f.number_field :double_bedroom_price, placeholder: "Enter price per room", class: "form-control", step: 0.1, min: 0.0 %>
              </div>

              <div class = "form-group">
                <%= f.label :suite_room_price, "Suite room price :"%>
                <%= f.number_field :suite_room_price, placeholder: "Enter price per room", class: "form-control", step: 0.1, min: 0.0 %>
              </div>

              <div class = "form-group">
                <%= f.label :dormitory_room_price, "Dormitory room price :"%>
                <%= f.number_field :dormitory_room_price, placeholder: "Enter price per room", class: "form-control", step: 0.1, min: 0.0 %>
              </div>-

              <div class = "form-group">
                <%= f.label :single_bedroom_num, "No. of singlebed rooms:"%>
                <%= f.number_field :single_bedroom_num, placeholder: "Enter availability", class: "form-control", step: 1, min: 0 %>
              </div>

              <div class = "form-group">
                <%= f.label :double_bedroom_num, "No. of double bedroom_num rooms:"%>
                <%= f.number_field :double_bedroom_num, placeholder: "Enter availability", class: "form-control", step: 1, min: 0 %>
              </div>

              <div class = "form-group">
                <%= f.label :suite_room_num, "No. of suite room num rooms:"%>
                <%= f.number_field :suite_room_num, placeholder: "Enter availability", class: "form-control", step: 1, min: 0 %>
              </div>

              <div class = "form-group">
                <%= f.label :dormitory_room_num, "No. of dormitory room num rooms:"%>
                <%= f.number_field :dormitory_room_num, placeholder: "Enter availability", class: "form-control", step: 1, min: 0 %>
              </div>

              <div class="form-group">
                <label>Hotel Preview</label>
                <div class="dz-clickable media align-items-center" data-toggle="dropzone" data-dropzone-url="http://" data-dropzone-clickable=".dz-clickable" data-dropzone-files="[&quot;assets/images/account-add-photo.svg&quot;]">
                  <div class="dz-preview dz-file-preview dz-clickable mr-3">
                    <div class="avatar avatar-lg dz-error dz-complete">
                      <%= image_tag f.object.picture&.exists? ?  f.object&.picture.url : 'account-add-photo.svg',  class: 'avatar-img rounded', data: { 'dz-thumbnail' => '' } %>
                    </div>
                  </div>
                  <div class="media-body">
                    <%= f.file_field :picture, class: 'btn btn-sm dz-clickable' %>
                  </div>
                </div>
              </div>

              <div class = "form-group">
                <%= f.submit "Submit", class: "btn btn-primary" %>
              </div>

              <div class="container-border bg-white py-2 px-4 my-3">
                <div class="row">
                  <%= f.hidden_field :latitude %>
                  <%= f.hidden_field :longitude %>
                  <div id="hotel_map_marker"></div>
                </div>
              </div>

              <% end %>
            </div>
            <!--/card-block-->
          </div>
          <!-- /form card login -->
        </div>
      </div>
      <!--/row-->
    </div>
    <!--/col-->
  </div>
  <!--/row-->
</div>
<!--/container-->






