
<main role="main">
      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">ADD IMAGES</h1>
          <p class="lead text-muted">Add the images you want to display in the gallery..</p>
          <p>
            <%= link_to("Back to Home Page", root_path, class: "btn btn-primary my-2") %>
          </p>
          <%= form_for @image, html: {multipart: true}  do |f| %>
            <%= render(partial: "error_refer/error", locals: { target: @image }) %>
            <div class="form-group">
              <%= f.label :picture, "Upload Image" %><br/>
              <%= f.file_field :picture  %>
            </div>
            <div class="form-group">
              <%= f.submit  %>
            </div>
          <% end %>

        </div>
      </section>
</main>